<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>

    <!-- SettingsActivity begin -->

    <!-- Padding between each menu item. -->
    <dimen name="menu_item_padding">8dp</dimen>
    <!-- Margins on side of EditText in the options screen. -->
    <dimen name="edit_text_margin">24dp</dimen>
    <!-- Text size for the section/item labels in the options screen. -->
    <dimen name="label_text_size">18sp</dimen>
    <!-- Spacing above and below each divider. -->
    <dimen name="divider_vertical_margin">16dp</dimen>
    <!-- Left and right side margins on the divider (how far from the edge they go). -->
    <dimen name="divider_horizontal_margin">8dp</dimen>
    <dimen name="rover_options_button_margin">16dp</dimen>
    <dimen name="button_min_height">75dp</dimen>

    <!-- SettingsActivity end -->

    <!-- Begin GraphFragment -->
    <dimen name="graph_view_title_font">18sp</dimen>
    <dimen name="graph_view_label_font">14sp</dimen>
    <!-- Using item since the compiler is stupid and dimen won't allow a float needs some sort unit -->
    <item name="graph_view_y_label_rotation" format="float" type="dimen">270.0</item>
    <dimen name="graph_view_padding">18dp</dimen>
    <!-- End GraphFragment -->

</resources>
